                <groupNetwork groupMembers="A,B,C,D,E,F,G,H" groupCommunicationChannels="A,B|C,D|E,F|G,H">
                    <groupNetworkActivity groupMessageMatch="all" groupRole="A,C,E,G:-:-:B,D,F,H:-:-">
                        <clearPage/>
                        <scoreLabel/>
                        <groupChannelScoreLabel/>
                        <groupScoreLabel/>
                        <groupMemberLabel/>
                        <groupMemberCodeLabel/>
                        <htmlText featureText="The producer sees the stimulus and enters some text"/>
                        <stimulusImage msToNext="0" maxHeight="80" percentOfPage="0" maxWidth="80">
                            <addPadding/>
                            <stimulusFreeText featureText="Vul een woord in de tekstbox in dat volgens u het best aan het einde van de zin past." validationRegex="[^0-9^S^J^s^j^C^c^V^v^W^w^T^t^Z^z^Y^y^X^x]{2,}"/>
                            <sendGroupMessageButton featureText="groupNetworkActivitySelf1" eventTag="groupNetworkActivitySelf1" incrementPhase="1" hotKey="W" norepeat="true"/>
                        </stimulusImage>
                    </groupNetworkActivity>
                    <groupNetworkActivity groupMessageMatch="all" groupRole="-:A,C,E,G:-:-:B,D,F,H:-">
                        <clearPage/>
                        <scoreLabel/>
                        <groupChannelScoreLabel/>
                        <groupScoreLabel/>
                        <groupMemberLabel/>
                        <groupMemberCodeLabel/>
                        <htmlText featureText="The producer waits for the guesser"/>
                    </groupNetworkActivity>
                    <groupNetworkActivity groupMessageMatch="all" groupRole="B,D,F,H:-:-:A,C,E,G:-:-">
                        <clearPage/>
                        <scoreLabel/>
                        <groupChannelScoreLabel/>
                        <groupScoreLabel/>
                        <groupMemberLabel/>
                        <groupMemberCodeLabel/>
                        <htmlText featureText="The guesser waits for the producer"/>
                    </groupNetworkActivity>
                    <groupNetworkActivity groupMessageMatch="all" groupRole="-:B,D,F,H:-:-:A,C,E,G:-">
                        <clearPage/>
                        <scoreLabel/>
                        <groupChannelScoreLabel/>
                        <groupScoreLabel/>
                        <groupMemberLabel/>
                        <groupMemberCodeLabel/>
                        <htmlText featureText="The guesser sees the text with a grid of stimuli, from which they select one based on the text"/>
                        <showStimulusGrid imageWidth="10%" eventTag="guesserNetworkActivity1Grid" columnCount="5">
                            <responseCorrect msToNext="0">
                                <htmlText featureText="responseCorrect"/>
                            </responseCorrect>
                            <responseIncorrect msToNext="0">
                                <htmlText featureText="responseIncorrect"/>
                            </responseIncorrect>
                            <stimuli/>
                        </showStimulusGrid>
                        <actionButton featureText="correct" eventTag="correct button" hotKey="Z">
                            <clearPage/>
                            <scoreIncrement scoreThreshold="5" scoreValue="1">
                                <aboveThreshold>
                                    <plainText featureText="above threshold"/>
                                    <addPadding/>
                                    <scoreLabel/>
                                    <addPadding/>
                                    <groupChannelScoreLabel/>
                                    <addPadding/>
                                    <groupScoreLabel/>
                                    <addPadding/>
                                    <sendGroupMessageButton featureText="corectNetworkActivity2" eventTag="corectNetworkActivity2" incrementPhase="1" hotKey="Z" norepeat="true"/>
                                </aboveThreshold>
                                <belowThreshold>
                                    <plainText featureText="below threshold"/>
                                    <addPadding/>
                                    <scoreLabel/>
                                    <addPadding/>
                                    <groupChannelScoreLabel/>
                                    <addPadding/>
                                    <groupScoreLabel/>
                                    <addPadding/>
                                    <sendGroupMessageButton featureText="corectNetworkActivity2" eventTag="corectNetworkActivity2" incrementPhase="1" hotKey="Z" norepeat="true"/>
                                </belowThreshold>
                            </scoreIncrement>
                        </actionButton>
                        <sendGroupMessageButton featureText="incorrect" eventTag="incorrect" incrementPhase="1" hotKey="NUM_PERIOD" norepeat="true"/>
                    </groupNetworkActivity>
                    <groupNetworkActivity groupMessageMatch="all" groupRole="-:-:A,B,C,D,E,F,G,H:-:-:A,B,C,D,E,F,G,H">
                        <clearPage/>
                        <scoreLabel/>
                        <groupChannelScoreLabel/>
                        <groupScoreLabel/>
                        <groupMemberLabel/>
                        <groupMemberCodeLabel/>
                        <htmlText featureText="The guesser and producer see the grid of stimuli with the guessers selection highlighted and the text from the producer. Following this the next stimulus is selected and the flow returns to activity 0."/>
                        <showStimulusGrid imageWidth="10%" eventTag="resultsGrid" columnCount="5">
                            <responseCorrect msToNext="0">
                                <htmlText featureText="response not relevant"/>
                            </responseCorrect>
                            <responseIncorrect msToNext="0">
                                <htmlText featureText="response not relevant"/>
                            </responseIncorrect>
                            <stimuli/>
                        </showStimulusGrid>
                        <sendGroupMessageButton featureText="nextStimulusFeature3" eventTag="nextStimulusFeature3" incrementPhase="1" hotKey="Q" norepeat="true"/>
                    </groupNetworkActivity>
                </groupNetwork>
            </hasMoreStimulus>
            <endOfStimulus>
                <autoNextPresenter/>
            </endOfStimulus>
            <randomGrouping/>
            <stimuli>
                <tag>MultiParticipant</tag>
            </stimuli>
        </loadStimulus>
    </presenter>
