    <metadata>
        <field controlledMessage="Please enter a valid age." controlledRegex="[0-9]+" postName="age" preventServerDuplicates="false" registrationField="Age"/>
        <field controlledMessage="Please enter at least three letters." controlledRegex=".'{'3,'}'" postName="firstName" preventServerDuplicates="false" registrationField="First name"/>
        <field controlledRegex="|male|female|other" postName="gender" preventServerDuplicates="false" registrationField="Gender"/>
        <field controlledMessage="Please enter your login code." controlledRegex=".'{'3,'}'" postName="workerId" preventServerDuplicates="false" registrationField="Login code"/>
    </metadata>
    <presenter displayOrder="1" menuLabel="Edit User" next="MultiParticipant" type="metadata" self="Edit_User" title="Edit User">
        <metadataField fieldName="age"/>
        <metadataField fieldName="firstName"/>
        <metadataField fieldName="gender"/>
        <metadataField fieldName="workerId"/>
        <saveMetadataButton featureText="Next" sendData="true" networkErrorMessage="Could not contact the server, please check your internet connection and try again.">
            <onError/>
            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter displayOrder="2" menuLabel="MultiParticipant" next="Edit_User" type="stimulus" self="MultiParticipant" title="MultiParticipant">
        <centrePage/>
        <loadStimulus eventTag="MultiParticipant" randomise="false" repeatRandomWindow="0" maxStimuli="8" repeatCount="1">
